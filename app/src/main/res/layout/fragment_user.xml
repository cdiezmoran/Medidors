<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                tools:context=".UI.MainActivity$PlaceholderFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_view_info"
            app:cardBackgroundColor="@android:color/white"
            app:cardElevation="8dp"
            app:cardCornerRadius="4dp"
            android:layout_margin="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:id="@+id/perfil_header"
                    android:scaleType="centerCrop"
                    android:src="@drawable/material"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_title"
                    android:layout_below="@+id/perfil_header"
                    android:text="Nombre: "
                    android:textSize="18sp"
                    android:textColor="@color/colorAccent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name"
                    android:layout_toEndOf="@+id/name_title"
                    android:layout_toRightOf="@+id/name_title"
                    android:layout_alignBaseline="@+id/name_title"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/username_title"
                    android:layout_below="@+id/name_title"
                    android:text="Usuario: "
                    android:textSize="18sp"
                    android:textColor="@color/colorAccent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/username"
                    android:layout_toEndOf="@+id/username_title"
                    android:layout_toRightOf="@+id/username_title"
                    android:layout_alignBaseline="@+id/username_title"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/email_title"
                    android:layout_below="@+id/username_title"
                    android:text="Email: "
                    android:textSize="18sp"
                    android:textColor="@color/colorAccent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/email"
                    android:layout_toEndOf="@+id/email_title"
                    android:layout_toRightOf="@+id/email_title"
                    android:layout_alignBaseline="@+id/email_title"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/white"
            app:cardElevation="8dp"
            app:cardCornerRadius="4dp"
            android:layout_margin="16dp"
            android:id="@+id/card_view_location"
            android:layout_below="@id/card_view_info">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:id="@+id/map"
                    android:src="@drawable/map"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/estado_title"
                    android:layout_below="@+id/map"
                    android:text="Estado: "
                    android:textSize="18sp"
                    android:textColor="@color/colorAccent"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/estado"
                    android:layout_toEndOf="@+id/estado_title"
                    android:layout_toRightOf="@+id/estado_title"
                    android:layout_alignBaseline="@+id/estado_title"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/municipio_title"
                    android:layout_below="@+id/estado_title"
                    android:text="Municipio: "
                    android:textSize="18sp"
                    android:textColor="@color/colorAccent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/municipio"
                    android:layout_toEndOf="@+id/municipio_title"
                    android:layout_toRightOf="@+id/municipio_title"
                    android:layout_alignBaseline="@+id/municipio_title"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
